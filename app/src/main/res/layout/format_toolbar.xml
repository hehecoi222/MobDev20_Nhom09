<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottom_bar"
        android:layout_width="391dp"
        android:layout_height="216dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_sheet" />

    <Button
        android:id="@+id/underline_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/italic_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/bold_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/bottom_bar"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/italic_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/bold_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/checkbox_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/bottom_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/underline_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <ImageView
        android:id="@+id/bold_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/format_bold_24px"
        android:foregroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/bold_button"
        app:layout_constraintStart_toStartOf="@+id/bold_button"
        app:layout_constraintTop_toTopOf="@+id/bold_button"
        app:srcCompat="@drawable/round_format_bold_24" />

    <TextView
        android:id="@+id/bold_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bold"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="@+id/bold_button"
        app:layout_constraintStart_toStartOf="@+id/bold_button"
        app:layout_constraintTop_toBottomOf="@+id/bold_icon" />

    <ImageView
        android:id="@+id/italic_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foregroundTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/underline_button"
        app:layout_constraintStart_toEndOf="@+id/bold_button"
        app:layout_constraintTop_toTopOf="@+id/italic_button"
        app:srcCompat="@drawable/round_format_italic_24" />

    <TextView
        android:id="@+id/italic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italic"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toStartOf="@+id/underline_button"
        app:layout_constraintStart_toEndOf="@+id/bold_button"
        app:layout_constraintTop_toBottomOf="@+id/italic_icon" />

    <ImageView
        android:id="@+id/underline_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/round_format_underlined_24"
        android:foregroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/underline_button"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/underline_button"
        app:layout_constraintTop_toTopOf="@+id/underline_button"
        app:srcCompat="@drawable/round_format_underlined_24" />

    <TextView
        android:id="@+id/underline_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Underline"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="@+id/underline_button"
        app:layout_constraintStart_toStartOf="@+id/underline_button"
        app:layout_constraintTop_toBottomOf="@+id/underline_icon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/round_check_box_24"
        android:foregroundTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/checkbox_button"
        app:layout_constraintStart_toEndOf="@+id/underline_button"
        app:layout_constraintTop_toTopOf="@+id/checkbox_button"
        app:srcCompat="@drawable/round_check_box_24" />

    <TextView
        android:id="@+id/checkbox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkbox"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="@+id/checkbox_button"
        app:layout_constraintStart_toEndOf="@+id/underline_button"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>