<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarDefaultDelayBeforeFade="400">

    <ImageButton
        android:id="@+id/button_frame_1"
        android:layout_width="368dp"
        android:layout_height="351dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:background="#FFFFFF"
        android:foreground="@drawable/button_note"
        android:paddingHorizontal="80dp" />

    <ImageButton
        android:id="@+id/more_1"
        android:layout_width="19dp"
        android:layout_height="81dp"
        android:layout_alignStart="@+id/button_frame_1"
        android:layout_alignTop="@+id/button_frame_1"
        android:layout_marginStart="291dp"
        android:layout_marginTop="29dp"
        android:foreground="@drawable/__dot_verticle" />

    <TextView
        android:id="@+id/old_note_label_1"
        android:layout_width="238dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/button_frame_1"
        android:layout_alignTop="@+id/button_frame_1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="84dp"
        android:text="Header"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content_1"
        android:layout_width="310dp"
        android:layout_height="178dp"
        android:layout_alignEnd="@+id/button_frame_1"
        android:layout_alignBottom="@+id/button_frame_1"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="54dp"
        android:text="Lorem Ipsum"
        android:textSize="30dp" />

</RelativeLayout>