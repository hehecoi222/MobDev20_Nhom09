<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottom_bar"
        android:layout_width="443dp"
        android:layout_height="248dp"
        android:scaleType="matrix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_sheet" />

    <Button
        android:id="@+id/share_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/outline_share_24"
        app:iconSize="50dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar"
        app:rippleColor="#F6F1F9" />

    <Button
        android:id="@+id/backup_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/outline_file_upload_24"
        app:iconSize="50dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar"
        app:rippleColor="#F6F1F9" />

    <Button
        android:id="@+id/delete_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/outline_delete_24"
        app:iconSize="50dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/backup_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar"
        app:rippleColor="#F6F1F9" />

    <Button
        android:id="@+id/attach_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/outline_attach_file_24"
        app:iconSize="50dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/share_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar"
        app:rippleColor="#F6F1F9" />

</androidx.constraintlayout.widget.ConstraintLayout>