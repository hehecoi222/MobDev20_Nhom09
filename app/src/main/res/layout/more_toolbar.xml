<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottom_bar"
        android:layout_width="391dp"
        android:layout_height="216dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_sheet" />

    <Button
        android:id="@+id/share_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/backup_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/bottom_bar"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/delete_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        app:iconSize="50dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/backup_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <Button
        android:id="@+id/attach_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/bottom_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/share_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar" />

    <TextView
        android:id="@+id/upload_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="@+id/backup_button"
        app:layout_constraintStart_toStartOf="@+id/backup_button"
        app:layout_constraintTop_toBottomOf="@+id/upload_icon" />

    <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="#F6F1F9"
        android:foreground="@drawable/outline_file_upload_24"
        android:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="@+id/backup_button"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/backup_button"
        app:layout_constraintTop_toTopOf="@+id/backup_button"
        app:srcCompat="@drawable/outline_file_upload_24" />

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/outline_delete_24"
        app:layout_constraintEnd_toStartOf="@+id/share_button"
        app:layout_constraintStart_toEndOf="@+id/backup_button"
        app:layout_constraintTop_toTopOf="@+id/delete_button"
        app:srcCompat="@drawable/outline_delete_24" />

    <TextView
        android:id="@+id/delete_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toStartOf="@+id/share_button"
        app:layout_constraintStart_toEndOf="@+id/backup_button"
        app:layout_constraintTop_toBottomOf="@+id/delete_icon" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/outline_share_24"
        app:layout_constraintEnd_toEndOf="@+id/share_button"
        app:layout_constraintStart_toStartOf="@+id/share_button"
        app:layout_constraintTop_toTopOf="@+id/share_button"
        app:srcCompat="@drawable/outline_share_24" />

    <TextView
        android:id="@+id/share_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="@+id/share_button"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toBottomOf="@+id/share_icon" />

    <ImageView
        android:id="@+id/attach_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/outline_attach_file_24"
        app:layout_constraintEnd_toEndOf="@+id/attach_button"
        app:layout_constraintStart_toEndOf="@+id/share_button"
        app:layout_constraintTop_toTopOf="@+id/attach_button"
        app:srcCompat="@drawable/outline_attach_file_24" />

    <TextView
        android:id="@+id/attach_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Attachment"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/attach_button"
        app:layout_constraintStart_toEndOf="@+id/share_button"
        app:layout_constraintTop_toBottomOf="@+id/attach_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>