<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".AccountActivity">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/top_sigin_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_app_bar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:composableName="com.mobdev20.nhom09.quicknote.views.TopSignInBarKt.TopSigninBarPreview"
        />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_sigin_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/padding_around"
        tools:composableName="com.mobdev20.nhom09.quicknote.views.UserHeadKt.UserInfoPreview"
        />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/padding_around"
        tools:composableName="com.mobdev20.nhom09.quicknote.views.SigninButtonKt.SignInButtonPreview"
        />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@id/signin_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/function_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/padding_around"
        tools:composableName="com.mobdev20.nhom09.quicknote.views.FunctionColumnKt.ButtonColumnPreview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>